<html>
    <head>
        <title>
            YouAccount
        </title>
        <link rel="stylesheet" type="text/css"   href="/css/accountpage.css">
        <script src="../scripts/jquery-3.6.0.min.js"></script>
        <script src="../scripts/index.js"></script>
    </head>

    <body>
        {{> header}}
        <!-- Upload Pop Up Here -->
        <div class="sessionuser" id={{username}}></div>
        <div class="coverPhoto">
            <!-- Cover Photo Handlebar -->
            <img src={{convertImage CoverPhoto}}>
        </div>
        
        <div class="ProfilePicture">
            <!-- PFP image -->
            <img src= {{convertImage VisitImage}}>
        </div>
        <div class="userBanner">
            <h2 id="User">{{username}}</h2>
            <span id="followers1">
                <span id="followercount">{{arrayCount FollowData.followers}}</span><span id="followers">Followers</span>
            </span>
            <span id="following1">
                <span id="followingcount">{{arrayCount FollowData.following}}</span><span id="following">Following</span>
            </span>
            
            {{#if (isInObjArray FollowData.followers visitor)}}
                <button id="followButton" following="true">Unfollow</button>
            {{else}}
                <button id="followButton" following="false">Follow</button>
            {{/if}} 
            <p id="Bio">
                <!-- Bio -->
                {{Bio}}
            </p>
        </div>
        <h2 id="UserWorks">
            <span id="Username">{{username}}</span>
            <span id="Works">Works</span>
        </h2>
        <div class="Projects">
            <!-- User Works HandleBar -->
            {{#each visitworks}}
                {{> visitworks}}
            {{/each}}
        </div>
    </body>
</html>